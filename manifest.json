{
  "manifest_version": 3,
  "name": "IMEI Checker",
  "version": "1.0",
  "description": "Check IMEI numbers quickly and effectively.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
    ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
    },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}